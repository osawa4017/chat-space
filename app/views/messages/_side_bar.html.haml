.chat-side
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        = link_to new_group_path do
          = icon('far', 'edit', class: "side-header__box__menu__new-group")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "side-header__box__menu__edit-user")
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__group-name
            = group.name
          .group__latest-message
